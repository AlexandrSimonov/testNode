{
    "root": true,
    "parser": "babel-eslint",
    "plugins": ["flowtype", "mocha"],
    "extends": ["airbnb-base"],
    "rules": {
        "no-plusplus": 0,
        "no-console": 0,
        "arrow-body-style": 0,
        "class-methods-use-this": 0,
        "no-restricted-syntax": 0,
        "guard-for-in": 0,
        "quotes": 0,
        "arrow-parens": 0,
        "comma-dangle": 0,
        "mocha/no-exclusive-tests": "error"
    },
    "env": {
        "mocha": true
    }
}